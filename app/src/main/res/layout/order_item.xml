<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/orderLayout"
        android:background="@drawable/no_border"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Number"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="#PUTGA00001"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:id="@+id/orderIdTextView"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Bricks"
                android:id="@+id/customerNameTextView"
                android:layout_alignParentEnd="true"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Number"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Bricks"
                android:id="@+id/customerNumberTextView"
                android:layout_alignParentEnd="true"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>








        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="100 Bricks"
                android:id="@+id/descriptionTextView"
                android:layout_alignParentEnd="true"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material Type"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Bricks"
                android:id="@+id/materialTypetTextView"
                android:layout_alignParentEnd="true"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="100 Bricks"
                android:id="@+id/quantityTextView"
                android:layout_alignParentEnd="true"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="â‚¹800"
                android:id="@+id/totalAmountTextView"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Pending"
                android:textStyle="bold"
                android:id="@+id/orderStatusTextView"
                android:layout_alignParentEnd="true"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completion Date"
                android:id="@+id/completionText"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="20/08/2000"
                android:id="@+id/dateTimeTextView"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated By:"
                android:id="@+id/updatedText"
                android:layout_alignParentStart="true"
                android:textColor="@color/putatoeGreenColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="XYZ"
                android:id="@+id/updatedTextView"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textColor="@color/putatoeGreenColor"
                android:layout_height="wrap_content"/>

        </RelativeLayout>






    </LinearLayout>








</RelativeLayout>