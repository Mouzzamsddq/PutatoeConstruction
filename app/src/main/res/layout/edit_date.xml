<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/putatoeBackground"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Completion Date"
        android:textColor="@color/white"
        android:background="@drawable/no_border"
        android:backgroundTint="@color/putatoeGreenColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/text1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/selectLayout"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dip"
            android:layout_gravity="center_vertical"
            android:text="Select Date:"
            android:textColor="@color/putatoeGreenColor"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:hint="Select Date"
            android:textColor="@color/putatoeGreenColor"
            android:textSize="18sp"
            android:id="@+id/completionDateTextView"/>









    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/selectLayout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/white"
            android:background="@drawable/no_border"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/putatoeGreenColor"
            android:layout_alignParentEnd="true"
            android:id="@+id/okTextView"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:background="@drawable/no_border"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/putatoeGreenColor"
            android:layout_toLeftOf="@id/okTextView"
            android:id="@+id/cancelTextView"
            android:layout_marginEnd="10dp"/>

    </RelativeLayout>










</RelativeLayout>